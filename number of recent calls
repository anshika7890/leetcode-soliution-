from collections import deque

class RecentCounter:

    def __init__(self):
        self.q = deque()
        
    def ping(self, t: int) -> int:
        # Add current request
        self.q.append(t)
        
        # Remove requests older than t - 3000
        while self.q and self.q[0] < t - 3000:
            self.q.popleft()
        
        # Return number of valid requests
        return len(self.q)
